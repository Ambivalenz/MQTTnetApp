<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MQTTnet.App"
             x:Class="MQTTnet.App.App">
  <Application.Styles>
    <FluentTheme Mode="Light" />



    <!--<StyleInclude Source="def" />-->




    <Style Selector="TextBlock">
      <Setter Property="FontFamily" Value="Roboto" />
    </Style>

    <Style Selector="Button">
      <Setter Property="MinWidth" Value="80" />
      <Setter Property="HorizontalContentAlignment" Value="Center" />
      <Setter Property="MinHeight" Value="26" />
    </Style>

    <Style Selector="Button.LeftButton">
    </Style>

    <Style Selector="Button.RightButton">
      <Setter Property="Margin" Value="10,0,0,0" />
    </Style>

    <Style Selector="Label.ValueHeader">
      <Setter Property="FontWeight" Value="Bold" />
      <Setter Property="FontSize" Value="14" />
      <Setter Property="Margin" Value="0,10,0,0" />
    </Style>

    <Style Selector="Label.FirstValueHeader">
      <Setter Property="Margin" Value="0,0,0,0" />
    </Style>

    <Style Selector="Separator">
      <Setter Property="HorizontalAlignment" Value="Stretch" />
      <Setter Property="Height" Value="1" />
      <Setter Property="Background" Value="Blue" ></Setter>
      <Setter Property="Margin" Value="0,10" />
    </Style>

    <Style Selector="GridSplitter">
      <Setter Property="Width" Value="1" />
      <Setter Property="Margin" Value="2,0" />
      <Setter Property="Background" Value="White" />
    </Style>

    <Style Selector="Label.OptionLabel">
      <Setter Property="VerticalAlignment" Value="Center" />
      <Setter Property="Margin" Value="0,0,10,10" />
    </Style>

    <Style Selector=":is(Control).OptionValue">
      <Setter Property="Margin" Value="0,0,0,10" />
    </Style>

    <Style Selector="TextBox.CodeText">
      <Setter Property="FontFamily" Value="Consolas" />
    </Style>

    <Style Selector="TextBlock.CodeText">
      <Setter Property="FontFamily" Value="Consolas" />
    </Style>

    <Style Selector="ListBoxItem">
      <Setter Property="Padding" Value="0"/>
      <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>

    <Style Selector="Border.Badge">
      <Setter Property="CornerRadius" Value="5"></Setter>
      <Setter Property="Margin" Value="3"></Setter>
    </Style>

    <Style Selector="Border.Badge > TextBlock">
      <Setter Property="FontSize" Value="10" />
    </Style>

    <Style Selector="Border.BadgeLength">
      <Setter Property="Background" Value="Gold"></Setter>
    </Style>

    <Style Selector="Border.BadgeRetained">
      <Setter Property="Background" Value="HotPink"></Setter>
    </Style>

    <Style Selector="Border.BadgeInbound">
      <Setter Property="Background" Value="Green"></Setter>
    </Style>

    <Style Selector="Border.BadgeOutbound">
      <Setter Property="Background" Value="Blue"></Setter>
    </Style>
















    <Style Selector="TabControl.sidebar">
      <Setter Property="TabStripPlacement" Value="Left"/>
      <Setter Property="Padding" Value="8 0 0 0"/>
      <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
      <Setter Property="Template">
        <ControlTemplate>
          <Border>
            <Grid ColumnDefinitions="Auto,*" RowDefinitions="*">

              <DockPanel Grid.Row="0" Grid.Column="0">

                <Border DockPanel.Dock="Bottom" Background="{DynamicResource SystemAccentColor}" Cursor="Hand">
                  <StackPanel>
                    <Image Source="avares://MQTTnet.App/Assets/icon_det_512.png" Height="128"></Image>
                    <TextBlock Text="MQTTnet App" Margin="10,5,10,5" FontSize="20" Foreground="White" HorizontalAlignment="Center" ></TextBlock>
                    <TextBlock Text="Version 0.0.1" Margin="0,0,0,10" HorizontalAlignment="Center" Foreground="White" FontSize="14"></TextBlock>
                  </StackPanel>
                </Border>

                <ScrollViewer
                    Name="PART_ScrollViewer"
                    HorizontalScrollBarVisibility="{TemplateBinding (ScrollViewer.HorizontalScrollBarVisibility)}"
                    VerticalScrollBarVisibility="{TemplateBinding (ScrollViewer.VerticalScrollBarVisibility)}"
                    Background="{TemplateBinding Background}">

                  <ItemsPresenter
                      Name="PART_ItemsPresenter"
                      Items="{TemplateBinding Items}"
                      ItemsPanel="{TemplateBinding ItemsPanel}"
                      ItemTemplate="{TemplateBinding ItemTemplate}">
                  </ItemsPresenter>
                </ScrollViewer>

              </DockPanel>


              <ContentPresenter Grid.Row="0" Grid.Column="1" Background="WhiteSmoke"
    Name="PART_SelectedContentHost"
    HorizontalContentAlignment="Stretch"
    VerticalContentAlignment="Stretch"
    Content="{TemplateBinding SelectedContent}"
    ContentTemplate="{TemplateBinding SelectedContentTemplate}">
              </ContentPresenter>



            </Grid>
          </Border>
        </ControlTemplate>
      </Setter>
    </Style>

    <Style Selector="TabControl.sidebar > TabItem">
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="Width" Value="225"></Setter>
      <Setter Property="Margin" Value="0"/>
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
      <Setter Property="Padding" Value="16"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style Selector="TabControl.sidebar > TabItem:selected /template/ Border#PART_SelectedPipe">
      <Setter Property="IsVisible" Value="False" />
    </Style>
    <Style Selector="TabControl.sidebar > TabItem:pointerover">
      <Setter Property="Opacity" Value="1"/>
    </Style>
    <Style Selector="TabControl.sidebar > TabItem:pointerover /template/ Border#PART_LayoutRoot">
      <Setter Property="Background" Value="{DynamicResource SystemAccentColorLight2}"/>
    </Style>
    <Style Selector="TabControl.sidebar > TabItem:selected">
      <Setter Property="Opacity" Value="1"/>
    </Style>
    <Style Selector="TabControl.sidebar > TabItem:selected /template/ Border#PART_LayoutRoot">
      <Setter Property="Background" Value="{DynamicResource SystemAccentColorLight1}"/>
    </Style>

  </Application.Styles>
</Application>
