<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MQTTnet.App"
             x:Class="MQTTnet.App.App">
  <Application.Styles>
    <FluentTheme Mode="Dark" />

    <Style Selector="Separator">
      <Setter Property="HorizontalAlignment" Value="Stretch" />
      <Setter Property="Height" Value="1" />
      <Setter Property="Background" Value="{StaticResource SystemControlBackgroundAccentBrush}" />
      <Setter Property="Margin" Value="0,10" />
    </Style>

    <Style Selector="Label.OptionLabel">
      <Setter Property="VerticalAlignment" Value="Center" />
      <Setter Property="Margin" Value="0,0,10,10" />
    </Style>

    <Style Selector=":is(Control).OptionValue">
      <Setter Property="Margin" Value="0,0,0,10" />
    </Style>
  </Application.Styles>
</Application>
