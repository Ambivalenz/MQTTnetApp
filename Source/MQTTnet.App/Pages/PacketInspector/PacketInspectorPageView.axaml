<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MQTTnet.App.Pages.PacketInspector.PacketInspectorPageView">

  <Grid ColumnDefinitions="*,5,*">
    <ListBox Grid.Column="0" Items="{Binding Packets}" SelectedItem="{Binding Packets.SelectedItem}">
    </ListBox>

    <GridSplitter Grid.Column="1" ResizeBehavior="PreviousAndNext" />

    <ContentControl Grid.Column="2" Content="{Binding Packets.SelectedItem.ContentInspector}" />
  </Grid>

</UserControl>
