<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MQTTnet.App.Pages.Subscriptions.ReceivedApplicationMessageView">

  <DockPanel LastChildFill="True">
    <Border Background="Gray" Margin="0,0,10,0" >
      <TextBlock MinWidth="50" VerticalAlignment="Center" TextAlignment="Right" Margin="0,0,5,0" DockPanel.Dock="Left" Text="{Binding Id}" FontFamily="Consolas" />
    </Border>

    <Border Classes="Badge BadgeLength" DockPanel.Dock="Right">
      <TextBlock Text="{Binding PayloadSize, StringFormat={}{0} bytes}" FontSize="10" Foreground="Black" Margin="5,2" />
    </Border>

    <Border DockPanel.Dock="Right" CornerRadius="5" Background="HotPink" Margin="3" IsVisible="{Binding IsRetained}">
      <TextBlock Text="Retained" FontSize="10" Foreground="Black" Margin="5,2" />
    </Border>

    <TextBlock Text="{Binding Topic}" VerticalAlignment="Center" FontFamily="Consolas" />

  </DockPanel>

</UserControl>
